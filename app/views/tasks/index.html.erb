<h1>List of Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.name, task_path(task) %>
    <p><%= task.done %></p>
    <h4> <%= link_to "Update task", edit_task_path(task) %>
    <%= link_to "Delete", task_path(task),
        method: :delete,
        data: { confirm: "Are you sure?" } %> </h4>
  </li>
  <%end%>

</ul>



<%= link_to "Create a new task", new_task_path %>
